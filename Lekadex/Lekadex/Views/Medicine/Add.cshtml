@model MedicineViewModel

@{
    ViewData["Title"] = "Medicine Page";
}

<form asp-controller="Medicine" asp-action="Add">
    Name: <input type="text" name="Name" /> <br />
    CompanyName: <input type="text" name="CompanyName" /> <br />
    ActiveSubstance: <input type="text" name="ActiveSubstance" /> <br />
    Weight: <input type="number" name="Weight" /> <br />
    Price: <input type="number" name="Price" /> <br />
    Amount: <input type="number" name="Amount" /> <br />
    ExpirationDate: <input type="date" name="ExpirationDate" /> <br />
    <button type="submit" class="btn btn-success">Add</button>
</form>


